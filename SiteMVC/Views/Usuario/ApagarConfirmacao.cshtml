@model UsuarioModel

@{
    ViewData["Title"] = "Confirmação de Apagar Usuario";
}

<div class"text-center">
    <h3>Realmente deseja apagar o usuario (@Model.Nome)</h3>
</div>



<a class="btn btn-primary btn-block" role="button" asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" asp-route-id="@Model.Id" role="button" asp-controller="Usuario" asp-action="Apagar">Confirmar exclusão</a>